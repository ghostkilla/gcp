{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
